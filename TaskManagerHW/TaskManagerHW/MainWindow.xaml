<Window x:Class="TaskManagerHW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagerHW"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Height="350" Width="500" Orientation="Horizontal">
            <ListBox SelectionChanged="nameDataG_SelectionChanged" Name="nameDataG" Height="350" VerticalAlignment="Top">
                
            </ListBox>
        </StackPanel>
            
        <StackPanel Orientation="Horizontal" Width="800" Height="135">
            <TextBox Margin="15,0,0,0" Width="200" Height="30" VerticalAlignment="Center" Name="txtb"></TextBox>
            <Button Click="Button_Click" Height="50" Width="100" Background="OrangeRed" Foreground="Beige" Margin="250,0,0,0">Create Process</Button>
            <Button Name="End" Click="End_Click" Height="50" Width="100" Background="OrangeRed" Foreground="Beige" Margin="50,0,0,0">End Process</Button>
        </StackPanel>
    </StackPanel>
</Window>
